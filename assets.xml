<theme>
    <include>./assets/colors/${system.theme}.xml</include>
    
    <colorScheme name="dark">
        <variables>
            <gamelistBackgroundColor>424242</gamelistBackgroundColor>
            <gamelistColor>cecece</gamelistColor>
            <gamelistSelectedColor>ffffff</gamelistSelectedColor>
        </variables>
    </colorScheme>

    <colorScheme name="light">
        <variables>
            <gamelistBackgroundColor>cecece</gamelistBackgroundColor>
            <gamelistColor>424242</gamelistColor>
            <gamelistSelectedColor>cecece</gamelistSelectedColor>
        </variables>
    </colorScheme>

    <colorScheme name="light, dark">
        <variables>
            <systemColor>${systemColor}</systemColor>
            <gamelistHelpColor>FFFFFF</gamelistHelpColor>
        </variables>
    </colorScheme>
    
</theme>