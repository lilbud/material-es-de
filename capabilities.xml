<themeCapabilities>

	<themeName>Material Theme</themeName>

	<colorScheme name="dark">
		<label>Dark mode</label>
	</colorScheme>

	<colorScheme name="light">
		<label>Light mode</label>
	</colorScheme>

	<variant name="Detailed">
		<label>Detailed</label>
		<selectable>false</selectable>
		<override>
			<trigger>noMedia</trigger>
			<mediaType>miximage, marquee, screenshot, titlescreen, cover, backcover, 3dbox, physicalmedia, fanart, video</mediaType>
			<useVariant>Basic</useVariant>
		</override>
	</variant>
	
	<variant name="Video">
		<label>Video</label>
		<selectable>false</selectable>
		<override>
			<trigger>noMedia</trigger>
			<mediaType>video</mediaType>
			<useVariant>Detailed</useVariant>
		</override>
	</variant>

	<variant name="Basic">
		<label>Basic</label>
		<selectable>false</selectable>
	</variant>

	<transitions name="transitions">
		<label>transitions</label>
		<selectable>false</selectable>
		<systemToSystem>instant</systemToSystem>
		<systemToGamelist>instant</systemToGamelist>
		<gamelistToGamelist>instant</gamelistToGamelist>
		<gamelistToSystem>instant</gamelistToSystem>
		<startupToSystem>instant</startupToSystem>
		<startupToGamelist>instant</startupToGamelist>
	</transitions>

	<suppressTransitionProfiles>
		<entry>builtin-instant</entry>
		<entry>builtin-slide</entry>
		<entry>builtin-fade</entry>
	</suppressTransitionProfiles>

</themeCapabilities>